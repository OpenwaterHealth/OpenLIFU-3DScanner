<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginHorizontal="20dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/notice_background"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save &amp; Finish"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/saveTextInModal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/saveText"
        android:textColor="@color/white"
        android:lineHeight="18dp"
        android:layout_marginHorizontal="20dp"

        />



    <Button
        android:id="@+id/captureSaveYesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:background="@drawable/round_green_button"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"

        android:textColor="@color/white"/>

    <Button
        android:id="@+id/captureSaveNoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:background="@drawable/round_cancel_ok"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"

        android:textColor="@color/white"/>



</LinearLayout>