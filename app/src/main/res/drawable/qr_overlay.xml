<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Full screen dim -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A6000000"/> <!-- semi-transparent black -->
        </shape>
    </item>

    <!-- Transparent square in the middle -->
    <item android:top="200dp" android:bottom="200dp" android:left="40dp" android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Optional white border around scanning area -->
    <item android:top="200dp" android:bottom="200dp" android:left="40dp" android:right="40dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@android:color/white" />
            <corners android:radius="10dp"/>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
