<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Circle with Red Border -->
    <item>
        <shape android:shape="oval">
             <!-- White circle background -->
            <stroke
                android:width="2dp"
                android:color="#FFFF" /> <!-- Red circle border -->
        </shape>
    </item>

    <!-- Horizontal Line -->
    <item android:top="24dp" android:bottom="24dp">
        <shape android:shape="rectangle">
            <size
                android:width="50dp"
                android:height="2dp" />
            <solid android:color="#FF0000" /> <!-- Red horizontal line -->
        </shape>
    </item>

    <!-- Horizontal Line -->
    <item android:top="24dp" android:bottom="24dp">
        <rotate android:fromDegrees="90">
        <shape android:shape="rectangle">
            <size
                android:width="50dp"
                android:height="2dp" />
            <solid android:color="#FF0000" /> <!-- Red horizontal line -->
        </shape>
        </rotate>
    </item>


</layer-list>
