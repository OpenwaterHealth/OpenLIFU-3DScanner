<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@drawable/background_image"> <!-- Black background -->
    <!-- Heading Text -->
    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Generate"
        android:textColor="#939191"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headingTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="3D Mesh"
        android:textColor="#547C54"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/green_circle" />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/green_circle" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/green_circle" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/green_circle" />
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/green_circle" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/green_circle" />


    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Header Image"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"
        android:src="@drawable/head" />
    <EditText
        android:id="@+id/referenceNumberEditText"
        android:layout_width="375dp"
        android:layout_height="55dp"
        android:layout_above="@+id/submitButton"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/edit_text_border_green"
        android:hint="Enter Reference Number"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:textColorHint="#888888" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="375dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/edit_text_border_green"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:padding="16dp"
        android:text="Submit"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:textColor="#ffffff" />

</RelativeLayout>
