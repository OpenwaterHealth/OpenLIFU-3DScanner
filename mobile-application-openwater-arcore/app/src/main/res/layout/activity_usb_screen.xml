<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF">

    <!-- Total Captured Images Text -->
    <TextView
        android:id="@+id/imageCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Captured Images: 0"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/successMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferred Successfully"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/successImageView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/ic_check_circle"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <!-- USB Icon -->
    <ImageView
        android:id="@+id/usbIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/usb_not_connected"
        android:contentDescription="USB Icon" />

    <!-- USB Status Label -->
    <TextView
        android:id="@+id/usbStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usbIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Connect USB"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/backToHomeButton"
        android:layout_width="375dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#4CAF50"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="Back to home"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />

</RelativeLayout>
