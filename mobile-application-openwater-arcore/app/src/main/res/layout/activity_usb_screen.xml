<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF">

    <!-- Total Captured Images Text -->
    <TextView
        android:id="@+id/imageCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Captured Images: 0"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/successMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferred Successfully"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/successImageView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/ic_check_circle"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <!-- USB Icon -->
    <ImageView
        android:id="@+id/usbIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/usb_not_connected"
        android:contentDescription="USB Icon" />

    <!-- USB Status Label -->
    <TextView
        android:id="@+id/usbStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usbIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Connect USB"
        android:textColor="#000000"
        android:textSize="18sp" />



    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToHomeButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="16dp"
            android:text="Back to home"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            app:cornerRadius="25dp"
            android:visibility="visible"/>
    </FrameLayout>
</RelativeLayout>
