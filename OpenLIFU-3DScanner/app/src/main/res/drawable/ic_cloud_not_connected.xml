<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_green">
    <item android:width="50dp" android:height="50dp">
        <shape android:shape="oval">
            <solid android:color="@color/algae" />
        </shape>
    </item>
    <item android:width="40dp" android:height="40dp"
        android:left="5dp" android:top="3dp">
        <bitmap android:src="@drawable/cloud"/>
    </item>
    <item android:width="60dp" android:height="60dp"
        android:top="-5dp" android:left="-5dp"
        android:right="-5dp" android:bottom="-5dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#364545" />
            </shape>
        </rotate>
    </item>
</ripple>
