<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_blue"> <!-- Ripple color -->

    <!-- Mask: keep same rounded rectangle so ripple is clipped correctly -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="500dp"/>
        </shape>
    </item>

    <!-- Content: background + thin right border as a layered drawable -->
    <item>
        <layer-list>

            <!-- 1) Background shape (your original dark color, with left rounded corners) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_green" />
                    <corners
                        android:bottomLeftRadius="500dp"
                        android:topLeftRadius="500dp"/>
                </shape>
            </item>



        </layer-list>
    </item>
</ripple>