<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginHorizontal="20dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/notice_background">

    <TextView
        android:id="@+id/cloudComputeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cloud_compute"
        android:textColor="@color/light_green"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/cloudStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/available"
        android:textColor="@color/light_green"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/userInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/not_logged_in"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center|top"
        android:lineHeight="22dp"
        android:lines="3"
        android:layout_marginHorizontal="20dp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="@null"
        android:background="@drawable/selector_round_green_button"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/disable_button_text"/>

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="@null"
        android:background="@drawable/round_cancel_ok"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

</LinearLayout>