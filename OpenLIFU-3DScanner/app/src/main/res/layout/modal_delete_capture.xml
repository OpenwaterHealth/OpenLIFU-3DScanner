<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/notice_background">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_capture"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_capture_description"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/deleteLocalOnlyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_local_only"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/selector_round_green_button"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/disable_button_text"/>

        <Button
            android:id="@+id/deleteBothBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_both"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/selector_round_green_button"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/disable_button_text"/>

        <Button
            android:id="@+id/deleteCloudOnlyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_cloud_only"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/selector_round_green_button"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/disable_button_text"/>

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/selector_round_green_button"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/disable_button_text"/>

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_back"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_cancel_ok"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/loadingProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.6"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>


